<title>Todo_2 App</title>


  <div class="container">
    <div class="row">
      <div class="span4">
        <h1>Todo 2 App</h1>
        <hr>
        <p>All your todos here</p>
        <%= form_tag('/todos/add', :method => 'post') do %>
          <%= text_field_tag(:todo_text) %>
          <%= submit_tag("Add todo", :class => 'btn') %>
        <% end %>
        <div class="well">
          <% @todo_items.each do |t| %>
            <li> <%= t.todo_item %> </li>
          <% end %>
        </div>
      </div>
    </div>
  </div>


<%= link_to 'Delete last todo', '/todos/delete', method: :delete %>
